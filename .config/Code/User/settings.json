{
  // vscode settings
  "window.zoomLevel": -1,
  "window.menuBarVisibility": "toggle",

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.letterSpacing": 0,

  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.detectIndentation": false,
  "editor.inlayHints.enabled": "on",
  "editor.suggestSelection": "first",
  "editor.rulers": [
    {
      "column": 100,
      "color": "#ff002242"
    }
  ],
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "punctuation.definition.comment"
        ],
        "settings": {
          "fontStyle": "",
          "foreground": "#4CAF50"
        }
      },
      {
        "scope": ["storage.modifier.specifier", "keyword.control.return"],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": ["storage.type.class.doxygen"],
        "settings": {
          "foreground": "#73DACA"
        }
      },
      {
        "scope": [
          "entity.name.type.cpp",
          "storage.type.cpp",
          "storage.type.built-in.cpp"
        ],
        "settings": {
          "foreground": "#BB9AF7"
        }
      }
    ]
  },

  "explorer.openEditors.visible": 40,
  "explorer.openEditors.sortOrder": "editorOrder",

  "workbench.colorTheme": "Tokyo Night",
  "workbench.activityBar.visible": false,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.showTabs": false,
  "workbench.colorCustomizations": {
    "[Kanagawa]": {
      "titleBar.activeBackground": "#181821",
      "titleBar.activeForeground": "#DCD7DA",
      "sideBar.background": "#181821",
      "sideBar.foreground": "#DCD7DA",
      "statusBar.foreground": "#FFFFFF",
      "scrollbarSlider.background": "#54546D59"
    },
    "[Tokyo Night]": {
      "quickInput.foreground": "#9AA5CE",
      "quickInputList.focusForeground": "#C0CAF5",
      "titleBar.activeForeground": "#C0CAF5",
      "sideBar.foreground": "#C0CAF5",
      "sideBarTitle.foreground": "#C0CAF5",
      "statusBar.foreground": "#C0CAF5",
      "scrollbarSlider.background": "#54546D59",
      "editor.selectionHighlightBackground": "#565F89",
      "editor.selectionBackground": "#565F89",
      "gitDecoration.modifiedResourceForeground": "#E0AF68",
      "gitDecoration.addedResourceForeground": "#7ECE6A",
      "gitDecoration.deletedResourceForeground": "#F7768E",
      "gitDecoration.untrackedResourceForeground": "#B4F9F8"
    }
  },

  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.clang_format_style": "{BasedOnStyle: Google, Standard: c++17, ColumnLimit: 100}",

  "git.autofetch": true,
  "git.confirmSync": false,

  // file associations
  "files.associations": {
    "config": "shellscript"
  },

  // code formatting
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": false
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.formatOnSave": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // debugging
  "debug.javascript.autoAttachFilter": "onlyWithFlag",

  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  // extension configs
  "comment-divider.shouldLengthIncludeIndent": true,
  "comment-divider.length": 100,
  "comment-divider.lineFiller": "*",

  "rewrap.wrappingColumn": 80,

  "python.formatting.provider": "yapf",
  "python.autoComplete.extraPaths": [
    "/home/vinicius/.cache/fakegir/",
    "/home/vinicius/.local/lib/python3.10/site-packages"
  ],
  "python.analysis.extraPaths": [
    "/home/vinicius/.cache/fakegir/",
    "/home/vinicius/.local/lib/python3.10/site-packages"
  ],

  "todohighlight.isEnable": true,
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss",
    "**/*.sh",
    "**/*.h",
    "**/*.cc",
    "**/*.py",
    "**/config"
  ],

  "diffEditor.ignoreTrimWhitespace": false,
  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,

  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.camelCaseMotion.enable": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.easymotionMarkerBackgroundColor": "#7e57c2",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<ESC>"],
      "commands": [":nohl"],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["lineBreakInsert"],
      "silent": true
    },
    {
      "before": ["<C-g>", "n"],
      "commands": ["workbench.action.editor.nextChange"],
      "silent": true
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["h"],
      "commands": ["cursorLeft"],
      "silent": true
    },
    {
      "before": ["j"],
      "commands": ["cursorDown"],
      "silent": true
    },
    {
      "before": ["k"],
      "commands": ["cursorUp"],
      "silent": true
    },
    {
      "before": ["l"],
      "commands": ["cursorRight"],
      "silent": true
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-f>": false
  },

  "cmakeFormat.args": [
    "--config-file",
    "/home/vinicius/projects/dotfiles/.config/cmakeformat/.cmake-format.py"
]
}
