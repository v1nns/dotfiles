{
  /* -------------------------------------------------------------------------------------------- */
  /*                                        editor settings                                       */
  /* -------------------------------------------------------------------------------------------- */

  "editor.bracketPairColorization.enabled": true,
  "editor.detectIndentation": false,
  "editor.fontFamily": "JetBrainsMono Nerd Font Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.inlayHints.enabled": "on",
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.suggestSelection": "first",
  "editor.rulers": [
    {
      "column": 100,
      "color": "#ff002242"
    }
  ],
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "punctuation.definition.comment"
        ],
        "settings": {
          "fontStyle": "",
          "foreground": "#4CAF50"
        }
      },
      {
        "scope": ["storage.modifier.specifier", "keyword.control.return"],
        "settings": {
          "fontStyle": ""
        }
      },
      {
        "scope": ["storage.type.class.doxygen"],
        "settings": {
          "foreground": "#73DACA"
        }
      },
      {
        "scope": [
          "entity.name.type.cpp",
          "storage.type.cpp",
          "storage.type.built-in.cpp"
        ],
        "settings": {
          "foreground": "#BB9AF7"
        }
      }
    ]
  },

  "diffEditor.ignoreTrimWhitespace": false,

  /* -------------------------------------------------------------------------------------------- */
  /*                                       explorer settings                                      */
  /* -------------------------------------------------------------------------------------------- */

  "explorer.openEditors.sortOrder": "editorOrder",
  "explorer.openEditors.visible": 40,

  /* -------------------------------------------------------------------------------------------- */
  /*                                        window settings                                       */
  /* -------------------------------------------------------------------------------------------- */

  "window.menuBarVisibility": "toggle",
  "window.title": "${rootName}${separator}${activeEditorShort}",
  "window.zoomLevel": -1,

  /* -------------------------------------------------------------------------------------------- */
  /*                                      workbench settings                                      */
  /* -------------------------------------------------------------------------------------------- */
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Tokyo Night",
  "workbench.editor.enablePreview": true,
  "workbench.editor.showTabs": false,
  "workbench.editor.wrapTabs": true,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.colorCustomizations": {
    "[Kanagawa]": {
      "titleBar.activeBackground": "#181821",
      "titleBar.activeForeground": "#DCD7DA",
      "sideBar.background": "#181821",
      "sideBar.foreground": "#DCD7DA",
      "statusBar.foreground": "#FFFFFF",
      "scrollbarSlider.background": "#54546D59"
    },
    "[Tokyo Night]": {
      "quickInput.foreground": "#9AA5CE",
      "quickInputList.focusForeground": "#C0CAF5",
      "titleBar.activeForeground": "#C0CAF5",
      "sideBar.foreground": "#C0CAF5",
      "sideBarTitle.foreground": "#C0CAF5",
      "statusBar.foreground": "#C0CAF5",
      "scrollbarSlider.background": "#54546D59",
      "editor.selectionHighlightBackground": "#565F89",
      "editor.selectionBackground": "#565F89",
      "gitDecoration.modifiedResourceForeground": "#E0AF68",
      "gitDecoration.addedResourceForeground": "#7ECE6A",
      "gitDecoration.deletedResourceForeground": "#F7768E",
      "gitDecoration.untrackedResourceForeground": "#B4F9F8"
    }
  },

  /* -------------------------------------------------------------------------------------------- */
  /*                                       terminal settings                                      */
  /* -------------------------------------------------------------------------------------------- */

  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.letterSpacing": 0,

  /* -------------------------------------------------------------------------------------------- */
  /*                                    vscode insider settings                                   */
  /* -------------------------------------------------------------------------------------------- */

  // give increased priority to avoid any stutterings while extension expects for some keybind input
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1
  },

  /* -------------------------------------------------------------------------------------------- */
  /*                                         git settings                                         */
  /* -------------------------------------------------------------------------------------------- */

  "git.autofetch": true,
  "git.confirmSync": false,

  /* -------------------------------------------------------------------------------------------- */
  /*                                       file associations                                      */
  /* -------------------------------------------------------------------------------------------- */

  "files.associations": {
    "config": "shellscript"
  },

  /* -------------------------------------------------------------------------------------------- */
  /*                                        code formatting                                       */
  /* -------------------------------------------------------------------------------------------- */

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /* -------------------------------------------------------------------------------------------- */
  /*                                         c++ extension                                        */
  /* -------------------------------------------------------------------------------------------- */

  "C_Cpp.autocompleteAddParentheses": true,
  "C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Google, Standard: c++17, ColumnLimit: 100}",
  "C_Cpp.default.cppStandard": "c++17",
  "C_Cpp.enhancedColorization": "Enabled",
  "C_Cpp.inlayHints.autoDeclarationTypes.enabled": true,
  "C_Cpp.inlayHints.parameterNames.enabled": false,
  "C_Cpp.inlayHints.referenceOperator.enabled": true,
  "C_Cpp.intelliSenseEngineFallback": "Enabled",

  /* -------------------------------------------------------------------------------------------- */
  /*                                      javascript settings                                     */
  /* -------------------------------------------------------------------------------------------- */

  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "javascript.updateImportsOnFileMove.enabled": "always",

  /* -------------------------------------------------------------------------------------------- */
  /*                                       python extension                                       */
  /* -------------------------------------------------------------------------------------------- */

  "python.formatting.provider": "yapf",
  "python.autoComplete.extraPaths": [
    "/home/vinicius/.cache/fakegir/",
    "/home/vinicius/.local/lib/python3.10/site-packages"
  ],
  "python.analysis.extraPaths": [
    "/home/vinicius/.cache/fakegir/",
    "/home/vinicius/.local/lib/python3.10/site-packages"
  ],

  /* -------------------------------------------------------------------------------------------- */
  /*                                        cmake extension                                       */
  /* -------------------------------------------------------------------------------------------- */

  "cmake.configureOnOpen": false,
  "cmake.configureOnEdit": false,

  /* -------------------------------------------------------------------------------------------- */
  /*                                    cmake-format extension                                    */
  /* -------------------------------------------------------------------------------------------- */

  "cmakeFormat.args": [
    "--config-file",
    "/home/vinicius/projects/dotfiles/.config/cmakeformat/.cmake-format.py"
  ],

  /* -------------------------------------------------------------------------------------------- */
  /*                                   comment divider extension                                  */
  /* -------------------------------------------------------------------------------------------- */

  "comment-divider.length": 100,
  "comment-divider.lineFiller": "*",
  "comment-divider.shouldLengthIncludeIndent": true,

  /* -------------------------------------------------------------------------------------------- */
  /*                                       rewrap extension                                       */
  /* -------------------------------------------------------------------------------------------- */

  "rewrap.wrappingColumn": 80,

  /* -------------------------------------------------------------------------------------------- */
  /*                                   todo highlight extension                                   */
  /* -------------------------------------------------------------------------------------------- */

  "todohighlight.isEnable": true,
  "todohighlight.include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.html",
    "**/*.php",
    "**/*.css",
    "**/*.scss",
    "**/*.sh",
    "**/*.h",
    "**/*.cc",
    "**/*.py",
    "**/config"
  ],

  /* -------------------------------------------------------------------------------------------- */
  /*                                         vim extension                                        */
  /* -------------------------------------------------------------------------------------------- */

  "vim.camelCaseMotion.enable": true,
  "vim.easymotion": true,
  "vim.easymotionMarkerBackgroundColor": "#7e57c2",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.leader": "<space>",
  "vim.surround": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<ESC>"],
      "commands": [":nohl"],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"],
      "silent": true
    },
    {
      "before": ["<C-g>", "n"],
      "commands": ["workbench.action.editor.nextChange"],
      "silent": true
    },
    {
      "before": ["<C-g>", "d"],
      "commands": ["git.revertSelectedRanges"],
      "silent": true
    },
    {
      "before": ["<C-g>", "a"],
      "commands": ["git.stageSelectedRanges"],
      "silent": true
    },
    {
      "before": ["<C-g>", "u"],
      "commands": ["git.unstageSelectedRanges"],
      "silent": true
    },
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["h"],
      "commands": ["cursorLeft"],
      "silent": true
    },
    {
      "before": ["j"],
      "commands": ["cursorDown"],
      "silent": true
    },
    {
      "before": ["k"],
      "commands": ["cursorUp"],
      "silent": true
    },
    {
      "before": ["l"],
      "commands": ["cursorRight"],
      "silent": true
    }
  ],
  "vm.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.handleKeys": {
    "<C-f>": false
  }
}
